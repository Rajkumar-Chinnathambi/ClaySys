@model IEnumerable<FirstWebApp.Models.CRUD>
@{
    ViewBag.Title = "ShowAllUser";
    Layout = "~/Views/Shared/Register.cshtml";
}


<div class=" container d-flex justify-content-center align-items-center flex-column">
    <h2 class="text-start w-75 ">ShowAllUser</h2>
    <div class=" col-lg-9 col-md-12 col-12 card py-3 px-2" style="height:500px;overflow-y:auto">
        <table class="table table-striped table-hover" >
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>
                            <a href="UpdateUserView?id=@item.Id" class="btn btn-info">Edit</a>
                            <a href="DeleteUser?id=@item.Id" class="btn btn-danger">Del</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

