@model IEnumerable<FirstWebApp.Models.CRUD>
@{
    ViewBag.Title = "UpdateUserView";
    Layout = "~/Views/Shared/Register.cshtml";
}


<section class="vh-100 bg-info">
    <div class="container py-3">
        <div class="row d-flex align-items-center justify-content-center h-75 " style="height:400px">

            <div class="col-md-4 col-lg-3 col-xl-5 offset-xl-1 bg-white shadow p-4">
                <form action="UpdateUser" method="post">
                    <h3 class="text-primary text-center ">Update User</h3>
                    @if (TempData["msg"] != null) { 
                        <small style="display:block" class="alert alert-danger">@TempData["msg"]</small>
                    }
                    @foreach (var item in Model)
                    {
                        <!-- User Name input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" for="uname">User Name</label>
                            <input type="text" name="UserName" id="uname" value="@item.UserName" class="form-control" />

                        </div>
                        <!--Id input hidden-->
                        <input name="Id" value="@item.Id" hidden/>
                        <!-- Email input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input type="email" name="Email" id="email" value="@item.Email" class="form-control" />

                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" for="pwd">Password</label>
                            <input type="password" name="Password" id="pwd" value="@item.Password" class="form-control" />

                        </div>                

                    
                    }
                    <!-- Submit button -->
                    <input type="submit" class="btn btn-primary w-100 btn-block"value="Update" />



                </form>
            </div>

        </div>
    </div>
</section>


