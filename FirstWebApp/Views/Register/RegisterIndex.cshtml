@{
    Layout = "~/Views/Shared/Register.cshtml";
    ViewBag.title = "Register Page";
    var EmailError = ViewBag.EmailError != "" ? ViewBag.EmailError : "";
    var PasswordError = ViewBag.PasswordError != "" ? ViewBag.PasswordError : "";
    var success = ViewBag.success != "" ? ViewBag.success : "";
    var result = ViewBag.result;
    var successClass = ViewBag.success == "success" ? "alert alert-success" : "alert alert-danger";

}
@Scripts.Render("~/RegisterScripts/RegisterIndex.js")
<section class="vh-100">
    <div class="container py-5 h-75 w-75">
        <div class="row d-flex align-items-center justify-content-center h-75" style="height:400px">
            <div class="col-md-8 col-lg-5 col-xl-6 h-100" style="height:300px">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="w-100" alt="Phone image">
            </div>
            <div class="col-md-5 col-lg-4 col-xl-5 offset-xl-1 shadow p-4">
                <form action="Register/CreateUser" method="post">
                    <h3 class="text-primary text-center ">Register Here</h3>
                    @{
                        if (success != "")
                        {
                            <small class="@successClass ">@result</small>
                        }
                    }
                    <div class="form-outline mb-4">
                        <label class="form-label" for="uname">User Name</label>
                        <input type="text" name="UserName" id="uname" class="form-control" />
                        @{
                            if (EmailError != "")
                            {
                                <small class="text-danger">@EmailError</small>
                            }

                        }
                        <small class="d-none" id="emailError"></small>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" name="Email" id="email" class="form-control" />
                        @{
                            if (EmailError != "")
                            {
                                <small class="text-danger">@EmailError</small>
                            }

                        }
                        <small class="d-none"></small>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="pwd">Password</label>
                        <input type="password" name="Password" id="pwd" class="form-control" />
                        @{
                            if (PasswordError != "")
                            {
                                <small class="text-danger">@PasswordError</small>
                            }

                        }
                        <small class="d-none"></small>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="pwd">Re-Password</label>
                        <input type="password" name="Re-Password" id="re-pwd" class="form-control" />
                        @{
                            if (PasswordError != "")
                            {
                                <small class="text-danger">@PasswordError</small>
                            }

                        }
                        <small class="d-none"></small>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <input type="submit" class="btn btn-primary w-100 btn-block">Register</input>



                </form>
            </div>

        </div>
    </div>
</section>